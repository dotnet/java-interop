    <DefineConstants>INTERNAL_NULLABLE_ATTRIBUTES</DefineConstants>
    <SignAssembly>true</SignAssembly>
    <AssemblyOriginatorKeyFile>..\..\product.snk</AssemblyOriginatorKeyFile>
