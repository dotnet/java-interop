<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net472;netcoreapp3.1</TargetFrameworks>
    <TargetFileName>java-source-utils.jar</TargetFileName>
    <TargetExt>.jar</TargetExt>
    <OutputType>jar</OutputType>
    <DebugSymbols>false</DebugSymbols>
    <DebugType>none</DebugType>
  </PropertyGroup>

  <PropertyGroup>
    <OutputPath>$(UtilityOutputFullPath)</OutputPath>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.NETFramework.ReferenceAssemblies" PrivateAssets="All" Version="1.0.0" />
  </ItemGroup>

  <ItemGroup>
    <CompileJava Include="src\main\**\*.java" />
  </ItemGroup>

  <ItemGroup>
    <CompileTestJava Include="src\test\java\**\*.java" />
  </ItemGroup>

  <ItemGroup>
    <CompileTestJavaResources Include="src\test\resources\com\microsoft\**\*.java" />
  </ItemGroup>

</Project>